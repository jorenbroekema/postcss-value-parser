{
  "name": "postcss-value-parser-esm",
  "version": "4.2.0",
  "description": "ESM fork of postcss-value-parser. Transforms css values and at-rule params into the tree",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-playwright": "^0.11.0",
    "chai": "^5.1.1",
    "eslint": "^9.5.0",
    "prettier": "^3.3.2"
  },
  "scripts": {
    "lint": "eslint . && prettier \"**/*.{js,ts,json,md}\" --list-different",
    "format": "eslint . --fix && prettier \"**/*.{js,ts,json,md}\" --write",
    "test": "web-test-runner --coverage"
  },
  "author": "Joren Broekema <joren.broekema@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/jorenbroekema/postcss-value-parser",
  "repository": {
    "type": "git",
    "url": "https://github.com/jorenbroekema/postcss-value-parser.git"
  },
  "keywords": [
    "postcss",
    "value",
    "parser"
  ],
  "bugs": {
    "url": "https://github.com/jorenbroekema/postcss-value-parser/issues"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "ignorePatterns": [
      "coverage"
    ]
  }
}
